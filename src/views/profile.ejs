<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil Sayfası</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #1a202c, #2d3748);
            color: #e2e8f0;
        }
        .profile-picture-container:hover .overlay {
            opacity: 1;
        }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center">
    <div class="container mx-auto p-8 bg-gray-800 rounded-lg shadow-xl max-w-4xl">
        <header class="text-center mb-8">
            <h1 class="text-4xl font-bold text-blue-400">Profil Sayfası</h1>
        </header>
        
        <main class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="md:col-span-1">
                <div class="profile-picture-container relative w-48 h-48 mx-auto mb-4 rounded-full overflow-hidden">
                    <img src="/Images/<%= user.profilePicture %>" alt="Profile Picture" class="w-full h-full object-cover">
                    <div class="overlay absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center opacity-0 transition-opacity duration-300">
                        <label for="avatar-input" class="cursor-pointer text-white">
                            <i class="fas fa-camera text-3xl"></i>
                        </label>
                    </div>
                </div>
                <form id="profile-form" action="/user/<%= user._id.toString() %>" method="post" enctype="multipart/form-data" class="hidden">
                    <input type="file" name="profilePicture" id="avatar-input" class="hidden" onchange="this.form.submit()">
                </form>
                <h2 class="text-2xl font-semibold text-center text-blue-300 mb-2"><%= user.name %></h2>
                <p class="text-center text-gray-400 mb-4"><%= user.email %></p>
                <div class="flex justify-center space-x-2">
                    <form action="/user/<%= user._id.toString() %>/removePicture" method="POST">
                        <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded transition duration-300">Remove Picture</button>
                    </form>
                    <form action="/user/" method="POST">
                        <button type="submit" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded transition duration-300">Logout</button>
                    </form>
                </div>
            </div>

            <div class="md:col-span-2">
                <div class="grid grid-cols-3 gap-4 mb-8">
                    <div class="bg-gray-700 p-4 rounded-lg text-center">
                        <h3 class="text-3xl font-bold text-blue-400"><%= user.todos.length %></h3>
                        <p class="text-gray-400">Total Todos</p>
                    </div>
                    <div class="bg-gray-700 p-4 rounded-lg text-center">
                        <h3 class="text-3xl font-bold text-blue-400"><%= user.tags.length %></h3>
                        <p class="text-gray-400">Total Tags</p>
                    </div>
                    <div class="bg-gray-700 p-4 rounded-lg text-center">
                        <h3 class="text-3xl font-bold text-blue-400"><%= completedCount %></h3>
                        <p class="text-gray-400">Completed Todos</p>
                    </div>
                </div>
                
                <a href="/todo/<%= user._id.toString() %>" class="block w-full bg-blue-500 hover:bg-blue-600 text-white text-center py-3 rounded-lg mb-8 transition duration-300">Show My Todos</a>
                
                <form action="/user/addTag" method="POST" class="mb-6">
                    <div class="flex">
                        <input type="text" id="newTag" name="newTag" placeholder="Add New Tag" required class="flex-grow bg-gray-700 text-white px-4 py-2 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <input type="hidden" id="userId" name="userId" value="<%= user._id %>">
                        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-r-lg transition duration-300">Add</button>
                    </div>
                </form>

                <ul class="space-y-2">
                    <% user.tags.forEach(tag => { %>
                        <li class="flex justify-between items-center bg-gray-700 p-3 rounded-lg">
                            <span class="text-blue-300"><%= tag %></span>
                            <button onclick="deleteTag('<%= tag %>')" class="text-red-400 hover:text-red-500 transition duration-300">
                                <i class="fas fa-trash"></i>
                            </button>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </main>

        
        <footer class="mt-8 text-center text-gray-500">
            <p>© 2024 Profil Sayfası</p>
        </footer>
    </div>

    <!-- Delete Account Modal -->
    <div id="deletePopup" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center">
        <div class="bg-gray-800 p-8 rounded-lg max-w-md w-full">
            <h2 class="text-2xl font-bold mb-4 text-red-400">Hesabı Sil</h2>
            <form id="deleteForm" action="/user/<%= user._id.toString()%>/deleteUser" method="POST">
                <div class="mb-4">
                    <label for="password" class="block text-gray-400 mb-2">Şifrenizi girin:</label>
                    <input type="password" id="password" name="password" required class="w-full bg-gray-700 text-white px-4 py-2 rounded focus:outline-none focus:ring-2 focus:ring-red-500">
                </div>
                <div class="flex justify-end space-x-4">
                    <button type="button" onclick="closeDeletePopup()" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded transition duration-300">İptal</button>
                    <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded transition duration-300">Hesabı Sil</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        async function deleteTag(tagName) {
            try {
                const response = await fetch('/user/deleteTag', {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ tagName })
                });

                if (!response.ok) throw new Error('Tag silinemedi');

                const result = await response.json();
                if (result.success && result.redirectUrl) {
                    window.location.href = result.redirectUrl;
                }
            } catch (error) {
                console.error('Bir hata oluştu:', error);
            }
        }

        function showDeletePopup() {
            document.getElementById("deletePopup").style.display = "flex";
        }

        function closeDeletePopup() {
            document.getElementById("deletePopup").style.display = "none";
        }

        document.querySelector('.profile-picture-container').addEventListener('click', function() {
            document.getElementById('avatar-input').click();
        });
    </script>
</body>
</html>
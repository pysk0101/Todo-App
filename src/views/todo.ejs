<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Görsel Todolist</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #1a202c, #2d3748);
            color: #e2e8f0;
        }
    </style>
</head>
<body class="min-h-screen">
    <div class="container mx-auto p-8 bg-gray-800 rounded-lg shadow-xl max-w-4xl mt-10">
        <header class="text-center mb-8">
            <h1 class="text-4xl font-bold text-blue-400">Todolist</h1>
        </header>
        
        <main>
            <form action="/todo/add" method="POST" class="mb-8">
                <div class="flex space-x-2">
                    <input type="text" id="todo" name="content" placeholder="Add New Todo" required class="flex-grow bg-gray-700 text-white px-4 py-2 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <input type="hidden" id="userId" name="userId" value="<%= user._id %>">
                    <select name="tag" id="tag" required class="bg-gray-700 text-white px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="" disabled selected>Select A Tag</option>
                        <% user.tags.forEach(function(tag) { %>
                            <option value="<%= tag %>"><%= tag %></option>
                        <% }); %>
                    </select>
                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-r-lg transition duration-300">Add</button>
                </div>
            </form>

            <div class="mb-8">
                <canvas id="todoChart" width="400" height="200"></canvas>
            </div>

            <ul class="space-y-2">
                <% todos.forEach(todo => { %>
                    <li class="flex justify-between items-center bg-gray-700 p-4 rounded-lg <%= todo.completed ? 'opacity-50' : '' %>">
                        <div class="flex items-center">
                            <span class="<%= todo.completed ? 'line-through' : '' %>"><%= todo.content %></span>
                            <span class="ml-2 px-2 py-1 bg-blue-500 text-xs rounded-full"><%= todo.tag %></span>
                        </div>
                        <div class="space-x-2">
                            <button onclick="completeTodo('<%= todo._id %>')" class="text-green-400 hover:text-green-500 transition duration-300">
                                <i class="fas fa-check"></i>
                            </button>
                            <button onclick="deleteTodo('<%= todo._id %>')" class="text-red-400 hover:text-red-500 transition duration-300">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </li>
                <% }) %>
            </ul>
        </main>
        
        <footer class="mt-8 text-center">
            <a href="/user/<%= user._id.toString() %>" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded transition duration-300">Show My Profile</a>
            <p class="mt-4 text-gray-500">© 2024 Todo Application</p>
        </footer>
    </div>


	<script>
		var todos = '<%- JSON.stringify(todos) %>'; 
	</script>
    
	<script>
        async function completeTodo(todoId) {
            try {
                const response = await fetch('/todo/complete', {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ todoId })
                });

                if (!response.ok) throw new Error('Todo tamamlanamadı');

                const result = await response.json();
                if (result.success && result.redirectUrl) {
                    window.location.href = result.redirectUrl;
                }
            } catch (error) {
                console.error('Bir hata oluştu:', error);
            }
        }

        async function deleteTodo(todoId) {
            try {
                const response = await fetch('/todo/delete', {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ todoId })
                });

                if (!response.ok) throw new Error('Todo silinemedi');

                const result = await response.json();
                if (result.success && result.redirectUrl) {
                    window.location.href = result.redirectUrl;
                }
            } catch (error) {
                console.error('Bir hata oluştu:', error);
            }
        }
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
			const arrayTodos = JSON.parse(todos);
            const ctx = document.getElementById('todoChart').getContext('2d');
            const completedTodos = arrayTodos.filter(todo => todo.completed).length;
            const incompleteTodos = arrayTodos.length - completedTodos;

            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Completed', 'Incomplete'],
                    datasets: [{
                        data: [completedTodos, incompleteTodos],
                        backgroundColor: ['#4CAF50', '#FFA500'],
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    title: {
                        display: true,
                        text: 'Todo Progress',
                        fontColor: '#e2e8f0',
                        fontSize: 18
                    },
                    legend: {
                        labels: {
                            fontColor: '#e2e8f0'
                        }
                    }
                }
            });
        });
    </script>
</body>
</html>

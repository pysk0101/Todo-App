{
    "compilerOptions": {
        "lib": [
            "ESNext", "DOM"
        ],
        "target": "ESNext",
        "module": "CommonJS",
        "noImplicitAny": true,
        "strict": true,
        "alwaysStrict": false,
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "allowSyntheticDefaultImports": true,
        "declaration":true,
        "declarationDir": "./dist/types",
        "noUnusedLocals":false,
        "noUnusedParameters": false,
        "skipLibCheck": true, //run build yaptıktan sonra çıkan hataları geçici olarak halleder.
    }
}